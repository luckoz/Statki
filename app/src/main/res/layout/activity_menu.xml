<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuColor"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/newGameBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/colorX"
            android:text="Start new game" />

        <Button
            android:id="@+id/optionsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/optionsColor"
            android:text="Options" />

        <Button
            android:id="@+id/statsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/colorCheck"
            android:text="Stats" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp">

        <CheckBox
            android:id="@+id/multiPlayerCheckB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/randomShipPosBtn"
            android:layout_gravity="center_horizontal"
            android:text="multi - player game" />

        <CheckBox
            android:id="@+id/randomShipPosBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/multiPlayerCheckB"
            android:layout_gravity="center_horizontal"
            android:text="random ship position"
            tools:checked="true" />
    </RelativeLayout>
<!--    Work in progress-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



</LinearLayout>